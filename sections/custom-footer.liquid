<!-- Footer Start -->
<div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
  <div class="container py-5">
    <div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(226, 175, 24, 0.5) ;">
      <div class="row g-4">
        <div class="col-lg-3">
          <a href="{{ section.settings.footer_link }}">
            <h1 class="text-primary mb-0">{{ section.settings.footer_title }}</h1>
            <p class="text-secondary mb-0">{{ section.settings.footer_subtitle }}</p>
          </a>
        </div>
        <div class="col-lg-6">
          <div class="position-relative mx-auto">
            {%- if section.settings.newsletter_enable -%}
              <div class="footer-block__newsletter">
                {%- if section.settings.newsletter_heading != blank -%}
                  <h2 class="footer-block__heading inline-richtext">{{ section.settings.newsletter_heading }}</h2>
                {%- endif -%}
                {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="newsletter-form__field-wrapper">
                    <div class="">
                      <input
                        id="NewsletterForm--{{ section.id }}"
                        type="email"
                        name="contact[email]"
                        class="form-control border-0 w-100 py-3 px-4 rounded-pill"
                        value="{{ form.email }}"
                        aria-required="true"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        {% if form.errors %}
                          autofocus
                          aria-invalid="true"
                          aria-describedby="ContactFooter-error"
                        {% elsif form.posted_successfully? %}
                          aria-describedby="ContactFooter-success"
                        {% endif %}
                        placeholder="{{ 'newsletter.label' | t }}"
                        required
                      >
                      <label class="field__label" for="NewsletterForm--{{ section.id }}">
                        {{ 'newsletter.label' | t }}
                      </label>
                      <button
                        type="submit"
                        class="newsletter-form__button field__button"
                        name="commit"
                        id="Subscribe"
                        aria-label="{{ 'newsletter.button_label' | t }}"
                      >
                        {% render 'icon-arrow' %}
                      </button>
                    </div>
                    {%- if form.errors -%}
                      <small class="newsletter-form__message form__message" id="ContactFooter-error">
                        {%- render 'icon-error' -%}
                        {{- form.errors.translated_fields.email | capitalize }}
                        {{ form.errors.messages.email -}}
                      </small>
                    {%- endif -%}
                  </div>
                  {%- if form.posted_successfully? -%}
                    <h3
                      class="newsletter-form__message newsletter-form__message--success form__message"
                      id="ContactFooter-success"
                      tabindex="-1"
                      autofocus
                    >
                      {% render 'icon-success' -%}
                      {{- 'newsletter.success' | t }}
                    </h3>
                  {%- endif -%}
                {%- endform -%}
              </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col-lg-3">
          <div class="d-flex justify-content-end pt-3">
            {%- if section.settings.show_social -%}
              {%- if settings.social_twitter_link != blank -%}
                <a
                  class="btn btn-outline-secondary me-2 btn-md-square rounded-circle"
                  href="{{ settings.social_twitter_link }}"
                  ><i class="fab fa-twitter"></i
                ></a>
              {%- endif -%}
              {%- if settings.social_facebook_link != blank -%}
                <a
                  class="btn btn-outline-secondary me-2 btn-md-square rounded-circle"
                  href="{{ settings.social_facebook_link }}"
                  ><i class="fab fa-facebook-f"></i
                ></a>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
                <a
                  class="btn btn-outline-secondary me-2 btn-md-square rounded-circle"
                  href="{{ settings.social_instagram_link }}"
                  ><i class="fab fa-facebook-f"></i
                ></a>
              {%- endif -%}
              {%- if settings.social_youtube_link != blank -%}
                <a
                  class="btn btn-outline-secondary me-2 btn-md-square rounded-circle"
                  href="{{ settings.social_youtube_link }}"
                  ><i class="fab fa-youtube"></i
                ></a>
              {%- endif -%}
              {%- if settings.social_linkedin_link != blank -%}
                <a
                  class="btn btn-outline-secondary btn-md-square rounded-circle"
                  href="{{ settings.social_linkedin_link }}"
                  ><i class="fab fa-linkedin-in"></i
                ></a>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
    <div class="row g-5">
      {%- for block in section.blocks -%}
        <div class="col-lg-3 col-md-6">
          <div class="footer-item">
            {%- if block.settings.heading != blank -%}
              <h4 class="text-light mb-3">{{- block.settings.heading -}}</h4>
            {%- endif -%}
            {%- case block.type -%}
              {%- when 'text' -%}
                <p class="mb-4">{{ block.settings.subtext }}</p>
                {%- if block.settings.button_text != blank -%}
                  <a
                    href="{{ block.settings.button_link }}"
                    class="btn border-secondary py-2 px-4 rounded-pill text-primary"
                  >
                    {{- block.settings.button_text -}}
                  </a>
                {%- endif -%}
              {%- when 'link_list' -%}
                {%- if block.settings.menu != blank -%}
                  <div class="d-flex flex-column text-start footer-item">
                    <ul class="list-unstyled">
                      {%- for link in block.settings.menu.links -%}
                        <li>
                          <a class="btn-link" href="{{ link.url }}">{{ link.title | escape }}</a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                {%- endif -%}
              {%- when 'contact_info' -%}
                <div class="footer-item">
                  <h4 class="text-light mb-3">Contact</h4>

                  {%- if block.settings.address != blank -%}
                    <p>Address: {{ block.settings.address }}</p>
                  {%- endif -%}

                  {%- if block.settings.email != blank -%}
                    <p>
                      Email: <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
                    </p>
                  {%- endif -%}

                  {%- if block.settings.phone != blank -%}
                    <p>
                      Phone: <a href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a>
                    </p>
                  {%- endif -%}

                  {%- if section.settings.payment_enable and block.settings.payment_accepted_text != blank -%}
                    <p>{{ block.settings.payment_accepted_text }}</p>
                    <div class="footer__payment">
                      <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
                      <ul class="list list-payment" role="list">
                        {%- for type in shop.enabled_payment_types -%}
                          <li class="list-payment__item">
                            {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  {%- endif -%}
                </div>

              {%- when 'brand_information' -%}
                <div class="footer-block__brand-info">
                  {%- if settings.brand_image != blank -%}
                    {%- assign brand_image_height = settings.brand_image_width
                      | divided_by: settings.brand_image.aspect_ratio
                    -%}
                    <div
                      class="footer-block__image-wrapper"
                      style="max-width: min(100%, {{ settings.brand_image_width }}px);"
                    >
                      {{
                        settings.brand_image
                        | image_url: width: 1100
                        | image_tag:
                          loading: 'lazy',
                          widths: '50, 100, 150, 200, 300, 400, 550, 800, 1100',
                          height: brand_image_height,
                          width: settings.brand_image_width
                      }}
                    </div>
                  {%- endif -%}
                  {%- if settings.brand_headline != blank -%}
                    <h2 class="footer-block__heading rte">{{ settings.brand_headline }}</h2>
                  {%- endif -%}
                  {%- if settings.brand_description != blank -%}
                    <div class="rte">{{ settings.brand_description }}</div>
                  {%- endif -%}
                  {%- if block.settings.show_social and has_social_icons -%}
                    {%- render 'social-icons', class: 'footer__list-social' -%}
                  {%- endif -%}
                </div>
            {%- endcase -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>
<!-- Footer End -->

<!-- Copyright Start -->
<div class="container-fluid copyright bg-dark py-4">
  <div class="container">
    <div class="row">
      <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
        <span class="text-light">
          <small>&copy; {{ 'now' | date: '%Y' }}</small>,
          <small>{{ shop.name | link_to: routes.root_url }}</small>
        </span>
      </div>
      <div class="col-md-6 my-auto text-center text-md-end text-white">
        {% if powered_by_link %}
          {{ powered_by_link }}
        {% else %}
          Designed By <a class="border-bottom" href="https://htmlcodex.com">HTML Codex</a> Distributed By
          <a class="border-bottom" href="https://themewagon.com">ThemeWagon</a>
        {% endif %}
        {% if section.settings.show_policy %}
          <ul class="policies list-unstyled">
            {% for policy in shop.policies %}
              {% if policy.url != blank %}
                <li>
                  <small
                    ><a href="{{ policy.url }}">{{ policy.title | escape }}</a></small
                  >
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<!-- Copyright End -->

